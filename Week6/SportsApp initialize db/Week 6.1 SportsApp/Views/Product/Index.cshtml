@using SportsApp.Models
@model IEnumerable<Product>

<h2>Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Product Price</th>
            <th>Product Category</th>
        </tr>      
    </thead>
    <tbody>
        @foreach (var pr in Model){
            <tr>
                <td>@pr.ProductID</td>
                <td>@pr.Name</td>
                <td>@pr.Description</td>
                <td>@pr.Price</td>
                <td>@pr.Category</td>
            </tr>
        }
    </tbody>
</table>