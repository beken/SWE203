
<h2> 
    Thank you for filling the form.
</h2>

@model UserInfo

<main class="text-center">
    <h1 class="h4"> Registration Status </h1>

    @if (Model.WillAttend == true){
        <p> Thanks @Model.Name, 
            There are @ViewBag.UserCount participants with you in the meeting. </p>
        <a class="btn btn-sm btn-outline-primary" href="/Meeting/List"> List Participants </a>
    }else{
        <p> @Model.Name, we are sorry hear you do not attend. </p>
        <a class="btn btn-sm btn-outline-primary" href="/Meeting/List"> List Participants </a>
    }

</main>


